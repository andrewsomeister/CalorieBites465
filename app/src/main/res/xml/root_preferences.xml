<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Food Preferences">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="Foods"
            app:title="Food Preferences"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications"
        app:icon="@drawable/ic_notifications_black_24dp">
        <SwitchPreferenceCompat
            app:key="AfterWalk"
            app:title="After Walk" />

        <SwitchPreferenceCompat
            app:key="AfterBadge"
            app:title="After Badge" />

        <SwitchPreferenceCompat
            app:key="AfterCharacter"
            app:title="After Unlocking Character" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Units">
        <ListPreference
            app:key="stepsVsMin"
            app:title="Steps vs. Min" />

        <ListPreference
            app:key="calVsKcal"
            app:title="Cal vs. Kcal" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Personal Data">
        <EditTextPreference
            app:key="height"
            app:title="Height" />

        <EditTextPreference
            app:key="weight"
            app:title="Weight" />
    </PreferenceCategory>

</PreferenceScreen>